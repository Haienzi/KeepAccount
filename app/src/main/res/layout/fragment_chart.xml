<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
              android:orientation="vertical"
             tools:context=".mvp.chart.ChartFragment">

    <include layout="@layout/toolbar_chart"/>
    <!-- TODO: Update blank fragment layout -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/bg_type_select"
                    android:backgroundTint="@color/colorAccent"
                    android:textColor="@color/white"
                    android:text="折线图"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="8dp"
                            android:layout_height="8dp"
                            android:id="@+id/imageView"
                            android:layout_gravity="center_vertical"
                            android:background="@color/total_color" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="2dp"
                            android:layout_marginRight="4dp"
                            android:text="结余"/>
                        <ImageView
                            android:layout_width="8dp"
                            android:layout_height="8dp"
                            android:layout_gravity="center_vertical"
                            android:background="@color/cost_color" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="2dp"
                            android:layout_marginRight="4dp"
                            android:text="支出"/>
                        <ImageView
                            android:layout_width="8dp"
                            android:layout_height="8dp"
                            android:layout_gravity="center_vertical"
                            android:background="@color/income_color" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="2dp"
                            android:layout_marginRight="4dp"
                            android:text="收入"/>
                    </LinearLayout>
                </RelativeLayout>
                <lecho.lib.hellocharts.view.LineChartView
                    android:id="@+id/chart_frame"
                    android:layout_marginTop="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="200dp">
                </lecho.lib.hellocharts.view.LineChartView>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/bg_type_select"
                    android:backgroundTint="@color/colorAccent"
                    android:textColor="@color/white"
                    android:text="支出饼图"/>
                <lecho.lib.hellocharts.view.PieChartView
                    android:id="@+id/pie_cost_frame"
                    android:layout_marginTop="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="200dp">
                </lecho.lib.hellocharts.view.PieChartView>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/bg_type_select"
                    android:layout_marginTop="8dp"
                    android:backgroundTint="@color/colorAccent"
                    android:text="收入饼图"
                    android:textAlignment="center"
                    android:textColor="@color/white"/>
                <lecho.lib.hellocharts.view.PieChartView
                    android:id="@+id/pie_income_frame"
                    android:layout_marginTop="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="200dp">
                </lecho.lib.hellocharts.view.PieChartView>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>