<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginEnd="8dp"
    android:layout_marginStart="8dp"
    android:orientation="vertical"
    android:stateListAnimator="@animator/touch_card_view"
    app:contentPadding="10dp"
    app:cardCornerRadius="10dp"
    app:cardElevation="5dp"
    android:clickable="true"
    tools:targetApi="lollipop">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="120dp">
        <ImageView
            android:id="@+id/book_cover"
            android:layout_width="125dp"
            android:layout_height="100dp"
            android:layout_centerVertical="true"
            android:layout_marginEnd="10dp"
            android:scaleType="centerCrop"
            tools:ignore="ContentDescription"
            tools:src="@mipmap/book_icon1"
            android:layout_marginRight="10dp"/>

        <ImageView
            android:id="@+id/book_scene"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            tools:src="@mipmap/book_scene1"/>

        <TextView
            android:id="@+id/book_name"
            style="@style/Text.White"
            android:layout_toEndOf="@id/book_cover"
            android:ellipsize="end"
            android:maxLines="1"
            android:textSize="@dimen/text16"
            android:text="账本名称"
            android:background="@drawable/bg_text_cur_book"
            android:layout_toRightOf="@id/book_cover"
            tools:ignore="RtlCompat"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@id/book_name"
            android:layout_below="@id/book_name"
            android:orientation="vertical"
            android:layout_marginTop="8dp"
            android:layout_alignLeft="@id/book_name">
            <TextView
                android:id="@+id/book_total_cost"
                style="@style/Text.Maple"
                android:textSize="@dimen/text16"
                android:text="总支出：10000.00"/>

            <TextView
                android:id="@+id/book_total_income"
                style="@style/Text.Maple"
                android:textSize="@dimen/text16"
                android:text="总收入：10000.00"
                />
        </LinearLayout>

        <TextView
            android:id="@+id/book_create_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="5dp"
            android:text="创建时间:2019/3/24"
            android:layout_marginRight="5dp"
            android:layout_alignParentRight="true"/>

    </RelativeLayout>
</android.support.v7.widget.CardView>